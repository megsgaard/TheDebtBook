<Window x:Class="TheDebtBook.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:local="clr-namespace:TheDebtBook.ViewModels"
        prism:ViewModelLocator.AutoWireViewModel="True"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400">    
    <Grid>
        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Top">
            <Button Command="{Binding AddNewDebtor}" Content="Add" Margin="50" FontSize="24"/>
        </StackPanel>
        <Label Content="Debtors" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="25" FontSize="24"/>
        <ListBox HorizontalAlignment="Left" Height="320" Margin="25,67,0,0" VerticalAlignment="Top" Width="218"/>
        <DataGrid ItemsSource="{Binding Path=Debtors}" 
                      IsSynchronizedWithCurrentItem="True"
                      Margin="25,72,152.6,33"
                      CanUserAddRows="False" 
                      CanUserDeleteRows="False" 
                      IsReadOnly="True">           
        </DataGrid>
    </Grid>
</Window>
